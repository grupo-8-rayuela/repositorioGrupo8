<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/pruebahome-styless.css" title="cont">
    <script src="https://kit.fontawesome.com/4c9feabc71.js" crossorigin="anonymous"></script>
    <title>Rayuela</title>
</head>

<body>
    <%- include('../views/partials/header.ejs') %>
        <%- include('../views/partials/whatsappButton.ejs') %>
            <section class="banner" id="home-banner">
                <img src="\img\banner-azul.png" alt="juguetes con fondo verde">
            </section>


            <section class="home_categoria">
                <h2 class="home_header">Elegí por Categoría</h2>

                <div class="container">
                    <% categorias.map(e=> { %>
                        <article class="card">

                            <img src="<%= e.img %>" alt="imagen">
                            <div>
                                <a href="/categorias/<%= e.categoria.replace(' ','').toLowerCase() %>">
                                    <%= e.categoria %>
                                </a>

                            </div>

                        </article>
                        <% }) %>
            </section>
            <div class="verTodosLosJuguetes">
                <a href="/productos">Ver todos juguetes</a>
                <section class="home_categoria">
            </div>


            <h2 class="home_header">Elegí por Edad</h2>

            <div class="container">
                <article class="card">

                    <img src="/img/categoria-6meses.png" alt="banco">
                    <div>
                        <a href="/edad/1">De 6 meses a 1 año</a>
                    </div>
                </article>

                <article class="card">
                    <img src="/img/categoria-1año.png" alt="banco">
                    <div>
                        <a href="/edad/2">De 1 años a 3 años</a>
                    </div>
                </article>

                <article class="card">
                    <img src="/img/categoria-3años.png" alt="banco">
                    <div>
                        <a href="/edad/3">De 3 años a 6 años</a>
                    </div>
                </article>

                <article class="card">
                    <img src="/img/categoria-6años.png" alt="banco">
                    <div>
                        <a href="/edad/4">Mas de 6 años</a>
                    </div>
                </article>

            </div>

            </section>
            <%- include('../views/partials/seccionTbnMeGusta.ejs') %>

                <footer>

   </section> 
   
   <footer>

                </footer>


</body>

</html>