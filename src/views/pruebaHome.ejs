<!DOCTYPE html>
<html lang="en">
    <%-include('./partials/head.ejs')%>

<body>
    <%-include('./partials/header.ejs')%>
    <section class="banner" id="home-banner">
        <img src="\img\banner-azul.png" alt="juguetes con fondo verde">
    </section>
    <h1>Elegí por Categoría</h1>
    <section class="home_categoria">

        <article class="home_categoria_card">
            <% categorias.map(e => { %>
            <a href="#">
                <img src="<%= e.img %>" alt="banco">
                <h3><%= e.categoria %></h3>
            </a>
            <% }) %>
        </article>      
    </section>

    <h1>Elegí por Edad</h1>
 
    <section class="home_categoria">
        <article class="home_categoria_card">
            <a href="#">
               
                <img src="/img/categoria-6meses.png" alt="banco">
                <h3>De 6 meses a un año</h3>
            </a>
        </article>

        <article class="home_categoria_card">
            <a href="#">
           
                <img src="/img/categoria-1año.png" alt="banco">
                <h3>De 1 a 3 años</h3>
            </a>
        </article>

        <article class="home_categoria_card">
            <a href="#">
               
                <img src="/img/categoria-3años.png" alt="banco">
                <h3>De 3 a 6 años</h3>
            </a>
        </article>

        <article class="home_categoria_card">
            <a href="#">
                <img src="/img/categoria-6años.png" alt="banco">
                <h3>Mas de 6 años</h3>
            </a>
        </article>

   </section> 

</body>
</html>