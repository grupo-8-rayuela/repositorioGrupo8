<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rayuela</title>
    <link rel="stylesheet" href="/css/users-styles.css">
    <script src="https://kit.fontawesome.com/4c9feabc71.js" crossorigin="anonymous"></script>
    
</head>

<body>

    <header>
        <%- include('../../views/partials/header.ejs') %>
    </header>

    <section class="banner" id="home-banner">
        <img src="\img\banner-azul.png" alt="juguetes con fondo verde">
    </section>

    <a class="user-list-link" href="/usuarios"><h2 class="user-list-tittle">Lista de Usuarios</h2></a> 
    <section class="lista-de-usuarios">
        
        
        <% allUsers.map(e => { %>
            <article class="producto">
                
                    <a href="/usuario/<%= e.id %>">
                    <% if (e.fotoPerfil == "") { %>
                    <img src="/img/users/undefined-user1280.png" alt="fotoPerfil">
                    <% } else { %>
                    <img src="/img/users/<%= e.user_img %>" alt="fotoPerfil">
                    <% } %>
                    
                    <h3> <%= e.user_first_name %>  <%= e.user_last_name %></h3>
                </a>
                <p>  <%= e.email %> </p>
                
                <div class="button-box">
                    <a href="/edicion-usuario/<%=e.id %>"><button type="submit" class="add-to-cart-button">EDITAR USUARIO</button></a>   
                    <form action="/delete/<%=e.id%>?_method=DELETE" method="POST">
                        <button type="submit" class="add-to-cart-button">BORRAR USUARIO</button>
                    </form>
                </div>
            </article>
        <% }) %>
    </section>

    <footer>
        <%-include('../../views/partials/footer.ejs')%>
    </footer>
    
</body>